{
  "name": "ChatTrail",
  "description": "Adds a minimap scroller to ChatGPT",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.chatgpt.com/*","https://chat.openai.com/*"],
      "js": ["dist/scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_icon": "dist/images/ChatTrail.png"
  }
}
